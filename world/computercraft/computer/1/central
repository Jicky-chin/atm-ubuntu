modem = peripheral.wrap("top")
modem.open(1)
while true do
  event, modemSide, senderChannel,
  senderID, message, distance = os.pullEvent("modem_message")

  if string.find(message, "connected") then
    -- connection --
    print("modem connected")
  else
    -- fuel report --
    print(message)
  end

end